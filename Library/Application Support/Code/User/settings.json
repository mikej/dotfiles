{
  "workbench.colorTheme": "Palenight Italic",
  "editor.fontFamily": "MonoLisa, Menlo, Monaco, 'Courier New', monospace",
  "editor.lineHeight": 22,
  "editor.fontLigatures": "'ss02'",
  "editor.fontSize": 12,
  "editor.renderWhitespace": "boundary",
  "terminal.integrated.fontSize": 12,
  "workbench.iconTheme": null,
  "workbench.startupEditor": "newUntitledFile",
  // hide various parts of UI
  "workbench.activityBar.visible": false,
  "workbench.statusBar.visible": true,
  "workbench.editor.showTabs": false,
  "editor.minimap.enabled": false,
  "workbench.layoutControl.enabled": false,
  "window.commandCenter": false,
  // position side bar on right instead of left
  // prevents code "jumping" when sidebar is opened/closed
  "workbench.sideBar.location": "right",
  "breadcrumbs.enabled": false,
  "[git-commit]": {
    "editor.rulers": [50]
  },
  "explorer.confirmDragAndDrop": false,
  "editor.formatOnSave": true,
  "[handlebars]": {
    //    "editor.defaultFormatter": "mfeckies.handlebars-formatter"
  },
  "workbench.editor.untitled.hint": "hidden",
  "editor.guides.indentation": false
}
